GROUP = os.listdir('workdir/PPR_03-MappedToReference/')

#
MCB_DIR = 'workdir/MCB_00-MergedData'
if not os.path.exists(MCB_DIR):
    os.makedirs(MCB_DIR)

PROJECTPATH = config['projectpath']
HOLOPATH = config['holopath']
LOGPATH = config['logpath']

