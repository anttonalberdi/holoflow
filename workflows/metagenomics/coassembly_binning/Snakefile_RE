rule metawrap_refinement:
    input:
        "{projectpath}/workdir/MCB_03-Binning/{group}_checked_bins.txt"
    output:
        directory("{projectpath}/workdir/MCB_04-BinMerging/{group}_files")
    params:
        concoct="{projectpath}/workdir/MCB_03-Binning/{group}_concoct/",
        maxbin="{projectpath}/workdir/MCB_03-Binning/{group}_maxbin/",
        metabat="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/",
        threads=expand("{threads}", threads=config['threads'])
    shell:
        """
        module load metawrap-mg/1.2 && \
        metawrap bin_refinement \
        -o {output} \
        -t {params.threads} \
        -A {params.concoct} \
        -B {params.maxbin} \
        -C {params.metabat} \
        -c 50 \
        -x 10
        """

##
# RefineM bin refinement
##
#>refinem filter_bins <bin_dir> <outlier_output_dir>/outliers.tsv <filtered_output_dir>
