##
# Create depth table
## Create depth table from bam files

rule depth_table:
    input:
        #genetic_coords="{projectpath}/MCB_02-ProdigalPrediction/{group}.coords.gbk",  #not actually necessary here, but used to keep order
        mapped_bams="{projectpath}/workdir/MCB_02-AssemblyMapping/{group}"
    output:
        metabat_depth_file="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/{group}.depth.txt",
        maxbin_depth_file="{projectpath}/workdir/MCB_03-Binning/{group}_maxbin/{group}.depth.txt",
        concoct_depth_file="{projectpath}/workdir/MCB_03-Binning/{group}_concoct/{group}.depth.txt"
    params:
        group="{group}",
    shell:
        """
        python {params.holopath}/bin/holo-depth_files_coa.py \
        -bam_p {input.mapped_bams} \
        -cct {output.concoct_depth_file} \
        -mtb {output.metabat_depth_file} \
        -mxb {output.maxbin_depth_file} \
        -ID {params.group} \
        -log {params.logpath}
        """


##
# Binning with metabat
##

rule binning_metabat:
    input:
        assembly="{projectpath}/workdir/MCB_01-Assembly/{group}.fa",
        depth_table="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/{group}.depth.txt"
    output:
        check_mtb="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/{group}.mtb_checked_bins"
    params:
        base_mtb="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/{group}.mtb",
        bin_table_mtb="{projectpath}/workdir/MCB_03-Binning/{group}.bins_metabat.txt",
        threads=expand("{threads}", threads=config['threads']),
        group="{group}"
    shell:
        """
        python {params.holopath}/bin/holo-binning_metabat.py \
        -a {input.assembly} \
        -d {input.depth_table} \
        -bt {params.bin_table_mtb} \
        -bb {params.base_mtb} \
        -t {params.threads} \
        -ID {params.group} \
        -log {params.logpath}
        """


