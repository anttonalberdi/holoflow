##
# Check binning
## If all binners created bins, then continue. If Any binner did not create bins, simply copy resulting bins from
# another software, rename these, and continue (the result is going to be the same for DAStool, is for the sake of the pipeline)
rule check_bins:
    input:
        check_mxb="{projectpath}/workdir/MCB_03-Binning/{group}_maxbin/{group}.mxb_checked_bins",
        check_mtb="{projectpath}/workdir/MCB_03-Binning/{group}_metabat/{group}.mtb_checked_bins",
        check_cct="{projectpath}/workdir/MCB_03-Binning/{group}_concoct/{group}.cct_checked_bins",
#        check_vmb="{projectpath}/MCB_03-Binning/{group}_vamb/{group}.vmb_checked_bins"
    output:
        "{projectpath}/workdir/MCB_03-Binning/{group}_checked_bins.txt",
    params:
        binning_dir="{projectpath}/workdir/MCB_03-Binning",
        group="{group}"
    shell:
        """
        python {params.holopath}/bin/holo-check_bins.py \
        --check_cct {input.check_cct} \
        -check_mtb {input.check_mtb} \
        -check_mxb {input.check_mxb} \
        -binning_dir {params.binning_dir} \
        -ID {params.group} \
        -log {params.logpath}
        """
#        --check_vmb {input.check_vmb} \

