# Make input files for assembly rule. This is needed to work with the previously made scripts.
# Not super elegant, but does the job.

rule make_input:
    output:
        read1="{projectpath}/MCB_00-MergedData/{group}_1.fastq",
        read2="{projectpath}/MCB_00-MergedData/{group}_2.fastq"
    shell:
        """
        for group in workdir/PPR_03-MappedToReference/*;
            do for fq1 in $group/*_1.fastq.gz;
                do echo $fq1 | tr '\n' ',' >> workdir/MCB_00-MergedData/$( basename "$group"_1.fastq);
                done;
                done
        for group in workdir/PPR_03-MappedToReference/*;
            do for fq2 in $group/*_2.fastq.gz;
                do echo $fq2 | tr '\n' ',' >> workdir/MCB_00-MergedData/$( basename "$group"_2.fastq);
                done;
                done
        for file in workdir/MCB_00-MergedData/*;
            do sed -i'' 's/.$//' $file;
                done
        """

# Assembly

rule assembly:
    input:
        read1="{projectpath}/MCB_00-MergedData/{group}_1.fastq",
        read2="{projectpath}/MCB_00-MergedData/{group}_2.fastq"
    output:
        "{projectpath}/workdir/MCB_01-Assembly/{group}_file_to_remove"
    params:
        coassembly=expand("{coassembly}", coassembly=config['coassembly']),
        assembler=expand("{assembler}", assembler=config['assembler']),
        klist_megahit=expand("{klist_megahit}", klist_megahit=config['klist_megahit']),
        klist_spades=expand("{klist_spades}", klist_spades=config['klist_spades']),
        threads=expand("{threads}", threads=config['threads']),
        memory=expand("{memory}", memory=config['memory']),
        out_dir="{projectpath}/workdir/MCB_01-Assembly/{group}_assembly",
        temp_assembly="{projectpath}/workdir/MCB_01-Assembly/{group}_assembly/temp_assembly.fa",
        logpath=expand("{logpath}", logpath=LOGPATH),
        holopath=expand("{holopath}", holopath=HOLOPATH),
        group="{group}"
    shell:
        """
        python {params.holopath}/bin/holo-assembly.py \
        -1 {input.read1} -2 {input.read2} \
        -a {params.assembler} \
        -coa {params.coassembly} \
        -m {params.memory} \
        -t {params.threads} \
        -k_megahit {params.klist_megahit} \
        -k_spades {params.klist_spades} \
        -o {params.out_dir} \
        -empty_o {output} \
        -temp_a {params.temp_assembly} \
        -ID {params.group} \
        -log {params.logpath}
        """

# Assembly reformat
##Contigs shorter than specified in min contig len parameter of config will be removed and the contigs will be renamed
rule assembly_reformat:
    input:
        empt_file="{projectpath}/workdir/MCB_01-Assembly/{group}_file_to_remove"
    output:
        stats="{projectpath}/workdir/MCB_01-Assembly/{group}.stats",
        out_assembly="{projectpath}/MCB_01-Assembly/{group}.fa"
    params:
        group="{group}",
        stats_in="{projectpath}/workdir/PPR_03-MappedToReference/{group}.stats",
        min_contig_len=expand("{min_contig_len}", min_contig_len=config['min_contig_len']),
        logpath=expand("{logpath}", logpath=LOGPATH),
        holopath=expand("{holopath}", holopath=HOLOPATH),
        in_assembly="{projectpath}/workdir/MCB_01-Assembly/{group}_assembly/temp_assembly.fa"
    shell:
        """
        rm {input.empt_file} && \
        python {params.holopath}/bin/holo-assembly_reformat.py \
        -ID {params.group} \
        -min_cl {params.min_contig_len} \
        -in_a {params.in_assembly} \
        -out_a {output.out_assembly} \
        -st_in {params.stats_in} \
        -st_out {output.stats} \
        -log {params.logpath}
        """

##
# Index assembly
## Coassembly is indexed with samtools and bwa
rule assembly_index:
    input:
        "{projectpath}/workdir/MCB_01-Assembly/{group}.fa"
    output:
        bt2_index="{projectpath}/workdir/MCB_01-Assembly/{group}.fa.rev.2.bt2l",
        samtools="{projectpath}/workdir/MCB_01-Assembly/{group}.fa.fai"
        # bwa_bwt="{projectpath}/MCB_01-Assembly/{group}.fa.bwt",
        # bwa_pac="{projectpath}/MCB_01-Assembly/{group}.fa.pac",
        # bwa_ann="{projectpath}/MCB_01-Assembly/{group}.fa.ann",
        # bwa_amb="{projectpath}/MCB_01-Assembly/{group}.fa.amb",
        # bwa_sa="{projectpath}/MCB_01-Assembly/{group}.fa.sa"
    threads: 40
    params:
        group="{group}"
    shell:
        """
        python {params.holopath}/bin/holo-assembly_index.py \
        -a {input} \
        -ia {output.samtools} \
        -bt2i {output.bt2_index} \
        -log {params.logpath} \
        -ID {params.group}
        """

##
# Assembly mapping
## map metagenomic reads to coassembly file to obtain differential coverage in next rule

rule assembly_mapping:
    input:
        assembly="{projectpath}/workdir/MCB_01-Assembly/{group}.fa",
        samtools="{projectpath}/workdir/MCB_01-Assembly/{group}.fa.fai",
        fq_path="{projectpath}/workdir/PPR_03-MappedToReference/{group}"
    output:
        directory("{projectpath}/workdir/MCB_02-AssemblyMapping/{group}")
    params:
        threads=expand("{threads}", threads=config['threads']),
        group="{group}"
    shell:
        """
        python {params.holopath}/bin/holo-coassembly_mapping.py \
        -a {input.assembly} \
        -fq_path {input.fq_path} \
        -t {params.threads} \
        -obam_b {output} \
        -ID {params.group} \
        -log {params.logpath}
        """


